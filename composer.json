{
    "name": "behat-from-scratch",
    "version": "1.0.0",
    "require": {
        "silex/silex":         "*",
        "twig/twig":           "*",
        "symfony/twig-bridge": "2.1.*",
        "symfony/form":        "2.1.*",
        "symfony/validator":   "2.1.*",
        "symfony/translation": "2.1.*",
        "doctrine/dbal":       "*@stable",

        "behat/behat":                  "*@stable",
        "behat/mink-extension":         "*@stable",
        "behat/mink-browserkit-driver": "*@stable",
        "behat/mink-selenium-driver":   "*@stable",
        "behat/mink-selenium2-driver":  "*@stable",
        "behat/mink-sahi-driver":       "*@stable",
        "benwaine/phabric":             "*"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-0": {
            "Acme": "src/",
            "Phabric\\Behat": "src/"
        }
    },
    "minimum-stability": "dev"
}
