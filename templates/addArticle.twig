{% extends 'layout.twig' %}

{% block body %}
    <h1>Add article</h1>

    <div class="preview">
        <h2>{{ form.title.get('value') }}</h2>
        <p>
            {{ form.body.get('value') }}
        </p>
    </div>

    <form action="{{ path('add_article') }}" method="POST">
        {{ form_widget(form) }}

        <input type="submit" value="Preview" class="btn btn-primary" />
    </form>
{% endblock %}
